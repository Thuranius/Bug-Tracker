<%- include ('./partials/head')%>
<div class="container-fluid">
<%- include ('./partials/sidebar')%>
    <main role='main' class="col-md-11 ml-sm-auto px-4">
      <div class="row">
        <h1>Welcome <%=locals.user.name.givenName%>!</h1>
      </div>
      <div class="row">
        <div class="card" style="width: 22rem;">
          <div class="card-header">
            <button type="button" class="btn btn-sm btn-primary float-right" data-toggle='modal' data-target='#newProject'>New Project</button>
          </div>
          <div class="card-body">
            <h5 class="card-title">Current Projects</h5>
          </div>
        </div>
      </div>
    </main>

    <!-- Modal for new project -->
    <div class="modal fade" id='newProject' tabindex='-1' role='dialog' aria-labelledby='test' aria-hidden='true'>
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="test">New Project</h5>
            <button type="button" class="close" data-dismiss='modal' aria-label='close'>
              <span aria-hidden='true'>&times</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/newProject" method="post">
              <div class="form-group">
                <label for="projectName">Project Name</label>
                <input class="form-control" type="text" name="projectName" value="">
              </div>
              <div class="form-group">
                <label for="description">Project Description</label>
                <textarea class="form-control" name="description" rows="4" cols="80"></textarea>                
              </div>
              <div class="form-group">
                <button class="btn btn-sm btn-dark btn-block">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>

<%- include ('./partials/foot')%>
